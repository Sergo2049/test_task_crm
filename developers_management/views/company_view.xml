    <record model='ir.ui.view' id="dm_company_view_form">
        <field name="name">dm.company.view.form</field>
        <field name="model">dm.company</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="name"/>
                    <field name="developer_ids"/>
