            </form>
        </field>
    </record>

    <record model='ir.ui.view' id="dm_company_view_tree">
        <field name="name">dm.company.view.tree</field>
        <field name="model">dm.company</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
            </tree>

        </field>
    </record>

